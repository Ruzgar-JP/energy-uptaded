    },
    "colors": {
      "palette": {
        "primary": {
          "DEFAULT": "#0F3935",
          "foreground": "#FFFFFF",
          "description": "Deep Forest Teal - Used for primary buttons, hero backgrounds, footer, and active states."
        },
        "secondary": {
          "DEFAULT": "#10B981",
          "foreground": "#FFFFFF",
          "description": "Emerald Green - Used for accents, success states, positive trends, and call-to-actions."
